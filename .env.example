# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# CORS Settings
ALLOWED_ORIGINS=["*"]

# Whisper Configuration
WHISPER_MODEL=medium.en
WHISPER_DEVICE=auto
WHISPER_BATCH_SIZE=16
WHISPER_SUPPRESS_NUMERALS=true

# NeMo Configuration
NEMO_DEVICE=auto
NEMO_BATCH_SIZE=32

# Audio Processing
MAX_AUDIO_DURATION=3600
SUPPORTED_FORMATS=["wav", "mp3", "m4a", "flac", "ogg"]

# Storage
UPLOAD_DIR=./uploads
OUTPUT_DIR=./outputs
MAX_FILE_SIZE=524288000

# Database
DATABASE_URL=sqlite:///./whisper_diarization.db

# Redis
REDIS_URL=redis://localhost:6379

# API Security
API_KEY_HEADER=X-API-Key
API_KEYS=["your-api-key-here"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Hugging Face (for pyannote.audio models)
HF_TOKEN=your-huggingface-token-here
PYTORCH_HOME=/app/models
HF_HOME=/app/models
